<?xml version="1.0" encoding="UTF-8"?>
<!--  Rolf Zschumme -->
<Configuration >   <!-- status=ERROR , WARN -->
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<!-- <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>  -->	 
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %class{1.} %L %M - %msg%xEx%n" />
		</Console>
		<File name="LogFile" fileName="EdiListFXa.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %class{1.} %L %M - %msg%xEx%n" /> 
		</File>
	</Appenders>
	<Loggers>
		<Root level="ERROR">			
				<AppenderRef ref="Console" />			
				<AppenderRef ref="LogFile" />		
		</Root>
		
		<logger name="de.vbl.ediliste" level="INFO" />
		<logger name="de.vbl.ediliste.controller" level="INFO" />
		<logger name="de.vbl.ediliste.controller.subs" level="INFO" />
		<logger name="de.vbl.ediliste.tools" level="INFO" />
		<logger name="de.vbl.ediliste.model" level="INFO" />
		
		<Root level="ERROR">
			<AppenderRef ref="Console" />
			<AppenderRef ref="LogFile" />
		</Root>
	</Loggers>

</Configuration>